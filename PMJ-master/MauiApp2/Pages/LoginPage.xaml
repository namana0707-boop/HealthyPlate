<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Pages.LoginPage"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label 
                Text="로그인" 
                FontSize="28"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center" />

            <Entry 
                x:Name="txtEmail"
                Placeholder="Username or email"
                WidthRequest="400"
                HeightRequest="35"
                PlaceholderColor="Gray"
                TextColor="Black"
                Margin="0,5,3,10"
                Keyboard="Email"
                />

            <Entry 
                x:Name="txtPassword"
                Placeholder="Password"
                WidthRequest="400"
                HeightRequest="35"
                IsPassword="True"
                PlaceholderColor="Gray"
                TextColor="Black"
                Margin="0,5,3,20"
                />

            <Button 
                Text="로그인"
                WidthRequest="400"
                HeightRequest="50"
                TextColor="White"
                CornerRadius="10"
                BackgroundColor="#2E7D32"
                Margin="0,10,0,0"
                Clicked="OnLoginClicked" />

            <Button 
                Text="회원가입"
                WidthRequest="400"
                HeightRequest="50"
                TextColor="White"
                CornerRadius="10"
                BackgroundColor="#2E7D32"
                Margin="0,10,0,50"
                Clicked="OnRegister" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>